{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["@aim-sdk/biome-config"],
  "linter": {
    "rules": {
      "style": {
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "useNodejsImportProtocol": "off",
        "useTemplate": "off"
      },
      "complexity": {
        "noForEach": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "public",
      "server",
      "apps/gateway/src/db",
      ".old-code-to-check"
    ]
  }
}
